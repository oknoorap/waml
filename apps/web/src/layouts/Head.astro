    titleTemplate="%s | Realm"
    description={description}
    openGraph={{
      basic: {
        title: title,
        type: "website",
        image: `${Astro.url.origin}/assets/media/banner.png`,
      }
    }}
    twitter={{
      creator: "@oknoorap"
    }}
    extend={{
      meta: [
        {
          name: "twitter:image",
          content: `${Astro.url.origin}/assets/media/banner.png`,
