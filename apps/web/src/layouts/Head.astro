---
import { SEO, Props as SeoProps } from "astro-seo";

export interface Props {
  title?: string;
  description?: string;
  seoProps?: SeoProps
}

const { title = 'Realm', description = 'REALM stands for Reactive-Lightweight Markup Language. HTML Framework for Building MVP.', seoProps = {} } = Astro.props;
