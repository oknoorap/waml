---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Realm">
  <import-element from="./elements/cta-section.element.html"></import-element>
  <import-element from="./elements/install-section.element.html"></import-element>
  <import-element from="./elements/example-section-1.element.html"></import-element>
  <import-element from="./elements/example-section-2.element.html"></import-element>
  <import-element from="./elements/example-section-3.element.html"></import-element>

  <container-layout id="hero" aria-label="Hero container layout" height="100vh">
    <cta-section aria-label="CTAs Section"></cta-section>
  </container-layout>

  <container-layout variant="odd">
    <install-section aria-label="Install Section"></install-section>
  </container-layout>

  <container-layout>
    <example-section-1 aria-label="Example #1 Section"></example-section-1>
  </container-layout>

  <container-layout variant="odd">
    <example-section-2 aria-label="Example #2 Section"></example-section-2>
  </container-layout>

  <container-layout>
    <example-section-3 aria-label="Example #3 Section"></example-section-3>
  </container-layout>
</Layout>
